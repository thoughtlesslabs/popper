--a silly game about popcorn

function _init()
	cls()
	kern()
end

function _update60()
	updatekern()
end

function kern()
		x={}
		y={}
		v={}
		for i=1,15 do 
			add(x,mid(1,rnd(110),110))
			add(y,mid(1,rnd(110),110))
			add(v,true)
		end
end

function updatekern()
	if btnp(4) then
		for i=1,#x do
			v[i]=false
		end
	end
end


function drawkern()
	local i
	
	cls(5)	
	for i=1,#x do
		if v[i] then
			print("⬇️",x[i],y[i])
		end
	end
end

function _draw()
	drawkern()
end
