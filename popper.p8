-- update functions

--update and reset game
function updatestart()
	level=levels[levelnum]
	kern(level)
	popcount=0
	gametimer=30
	levelselect()
	if btnp(4) then
		mode="game"
	end
end

--player select level
function levelselect()
	if btnp(0) then
		if levelnum >1 then
			levelnum-=1
		end
	elseif btnp(1) then
		if levelnum < #levels then
			levelnum+=1
		end
	end
end

function updategameover()
	if btnp(5) then
		mode="game"
	end
end

--pop kernels base on user input
function updategame()
 if popcount<#kernels then
 	if btnp(4) then
 	kernpop()
 	end
 else
 	updategameover()
 end
 movekern(rkern)
 if kernels[rkern].j then
		kernels[rkern].jtimer-=1
	end
end

function kernpop()
	rkern=flr(rnd(#kernels)+1)
	kernels[rkern].j=true
	jitter(kernels[rkern].j)
	if kernels[rkern].jtimer>0 then
		if kernels[rkern].p==true then
			del(kernels,kernels[rkern].n)
			kernpop()
		else
			sfx(0)
			shake=0.1
			kernels[rkern].p=true
			kernels[rkern].v=false
			popped(kernels[rkern])
			popcount+=1
		end
	end
end

function movekern(mk)
	mv=kernels[mk]
	mv.dx=rnd(5)
	mv.dy=rnd(2)
	if mv.p then
		if mv.mvtimer>0 then
		nextx=mv.x+mv.dx
		nexty=mv.y+mv.dy
		mv.mvtimer-=1
		end
	else
		nextx=mv.x
		nexty=mv.y
	end
	
	if nextx <100 then
	mv.x=nextx
	mv.y=nexty
	else 
		mv.x=mv.x
		mv.y=mv.y
	end
end

function updategameover()
	gametimer-=1
	if gametimer<0 then
		mode="gameover"
		if btn(5) then
			mode="start"
		end
	end
end
