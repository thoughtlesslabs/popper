--kernels

-- give kernels attributes
function addkern(_i)
	k={}
	k.x=mid(1,rnd(110),110)
	k.y=mid(1,rnd(110),110)
	k.dx=1
	k.dy=-1
	k.v=true
	k.p=false
	k.j=false
	k.jtimer=100
	k.r=flr(rnd(4)+1)
	k.n=_i
	k.mvtimer=10
	add(kernels,k)
end

--generate popcorn kernels
function kern(lvl)
	kernels={}
	for i=1,#lvl do 
		chr=sub(lvl,i,i)
		if chr=="f" then
			addkern(i)
		end
	end
end
